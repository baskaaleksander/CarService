@model IEnumerable<Part>
@{
    ViewData["Title"] = "Parts Inventory";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1><i class="bi bi-box-seam"></i> Parts Inventory</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Add Part
    </a>
</div>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">No parts in inventory yet.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Stock</th>
                <th>Unit Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var part in Model)
            {
                <tr class="@(part.StockQuantity == 0 ? "table-danger" : part.StockQuantity < 5 ? "table-warning" : "")">
                    <td>@part.Name</td>
                    <td>
                        @if (part.StockQuantity == 0)
                        {
                            <span class="badge bg-danger">Out of Stock</span>
                        }
                        else if (part.StockQuantity < 5)
                        {
                            <span class="badge bg-warning text-dark">Low: @part.StockQuantity</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@part.StockQuantity</span>
                        }
                    </td>
                    <td>@part.UnitPrice.ToString("C")</td>
                    <td>
                        <a asp-action="UpdateStock" asp-route-id="@part.Id" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-arrow-repeat"></i> Adjust Stock
                        </a>
                        <a asp-action="Edit" asp-route-id="@part.Id" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
