@model ServiceOrder
@{
    ViewData["Title"] = $"Assign Mechanic - Order #{Model.Id}";
}

<h1><i class="bi bi-person-plus"></i> Assign Mechanic to Order</h1>
<p class="text-muted">Order #@Model.Id - @Model.Vehicle?.Brand @Model.Vehicle?.Model (@Model.Vehicle?.RegistrationNumber)</p>
<hr />

<partial name="_ValidationSummary" />

<div class="row">
    <div class="col-md-6">
        <div class="alert alert-info mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Client:</strong> @Model.Client?.Email
                </div>
                <div>
                    <strong>Status:</strong> <partial name="_StatusBadge" model="Model.Status" />
                </div>
            </div>
        </div>

        <form asp-action="Assign" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="mb-3">
                <label for="mechanicId" class="form-label">Select Mechanic</label>
                <select name="mechanicId" id="mechanicId" asp-items="@ViewBag.Mechanics" class="form-select">
                    <option value="">-- Select a mechanic --</option>
                </select>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-person-check"></i> Assign Mechanic
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
