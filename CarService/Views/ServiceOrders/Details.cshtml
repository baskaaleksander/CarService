@model ServiceOrder
@{
    ViewData["Title"] = $"Zlecenie #{Model.Id}";
}

<h1>
    <i class="bi bi-clipboard-check"></i> Zlecenie #@Model.Id
    <partial name="_StatusBadge" model="Model.Status" />
</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informacje o zleceniu</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl>
                            <dt><i class="bi bi-calendar3 me-1"></i> Utworzono</dt>
                            <dd>@Model.CreatedAt.ToString("d")</dd>
                            @if (Model.CompletedAt.HasValue)
                            {
                                <dt><i class="bi bi-check-circle me-1"></i> Zakończono</dt>
                                <dd>@Model.CompletedAt.Value.ToString("d")</dd>
                            }
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl>
                            <dt><i class="bi bi-car-front me-1"></i> Pojazd</dt>
                            <dd>@Model.Vehicle?.Brand @Model.Vehicle?.Model (@Model.Vehicle?.RegistrationNumber)</dd>
                            <dt><i class="bi bi-person me-1"></i> Klient</dt>
                            <dd>@Model.Client?.FirstName @Model.Client?.LastName (@Model.Client?.Email)</dd>
                            <dt><i class="bi bi-wrench me-1"></i> Mechanik</dt>
                            <dd>@(Model.Mechanic != null ? $"{Model.Mechanic.FirstName} {Model.Mechanic.LastName}" : "Nieprzypisany")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        @if (User.IsInRole("Mechanic") || User.IsInRole("Admin"))
        {
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Aktualizacja statusu</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateStatus" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="btn-group" role="group">
                            @if (Model.Status == ServiceOrderStatus.Pending)
                            {
                                <button type="submit" name="status" value="@ServiceOrderStatus.Accepted" class="btn btn-primary">Przyjmij</button>
                                <button type="submit" name="status" value="@ServiceOrderStatus.Cancelled" class="btn btn-secondary">Anuluj</button>
                            }
                            @if (Model.Status == ServiceOrderStatus.Accepted)
                            {
                                <button type="submit" name="status" value="@ServiceOrderStatus.InProgress" class="btn btn-info">Rozpocznij pracę</button>
                                <button type="submit" name="status" value="@ServiceOrderStatus.Cancelled" class="btn btn-secondary">Anuluj</button>
                            }
                            @if (Model.Status == ServiceOrderStatus.InProgress)
                            {
                                <button type="submit" name="status" value="@ServiceOrderStatus.Completed" class="btn btn-success">Zakończ</button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        }

        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Pozycje</h5>
                @if ((User.IsInRole("Mechanic") || User.IsInRole("Admin")) && Model.Status != ServiceOrderStatus.Completed && Model.Status != ServiceOrderStatus.Cancelled)
                {
                    <a asp-action="AddItem" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Dodaj pozycję</a>
                }
            </div>
            <div class="card-body">
                @if (Model.Items.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Typ</th>
                                <th>Nazwa</th>
                                <th>Ilość</th>
                                <th>Cena jednostkowa</th>
                                <th>Razem</th>
                                @if ((User.IsInRole("Mechanic") || User.IsInRole("Admin")) && Model.Status != ServiceOrderStatus.Completed && Model.Status != ServiceOrderStatus.Cancelled)
                                {
                                    <th></th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@(item.ServiceId.HasValue ? "Usługa" : "Część")</td>
                                    <td>@(item.Service?.Name ?? item.Part?.Name)</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice.ToString("C")</td>
                                    <td>@((item.Quantity * item.UnitPrice).ToString("C"))</td>
                                    @if ((User.IsInRole("Mechanic") || User.IsInRole("Admin")) && Model.Status != ServiceOrderStatus.Completed && Model.Status != ServiceOrderStatus.Cancelled)
                                    {
                                        <td>
                                            <form asp-action="RemoveItem" method="post" class="d-inline" onsubmit="return confirm('Usunąć tę pozycję?')">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@Model.Id" />
                                                <input type="hidden" name="itemId" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger">Usuń</button>
                                            </form>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-light">
                                <td colspan="4" class="text-end"><strong>Suma:</strong></td>
                                <td><strong>@Model.Items.Sum(i => i.Quantity * i.UnitPrice).ToString("C")</strong></td>
                                @if ((User.IsInRole("Mechanic") || User.IsInRole("Admin")) && Model.Status != ServiceOrderStatus.Completed && Model.Status != ServiceOrderStatus.Cancelled)
                                {
                                    <td></td>
                                }
                            </tr>
                        </tfoot>
                    </table>
                }
                else
                {
                    <p class="text-muted">Brak dodanych pozycji.</p>
                }
            </div>
        </div>

        @if (User.IsInRole("Mechanic") || User.IsInRole("Admin"))
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Notatki diagnostyczne</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateDiagnostics" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="mb-3">
                            <label for="diagnosticNotes" class="form-label">Notatki</label>
                            <textarea name="diagnosticNotes" id="diagnosticNotes" class="form-control" rows="4">@Model.DiagnosticNotes</textarea>
                        </div>
                        <div class="mb-3">
                            <label for="laborHours" class="form-label">Godziny pracy</label>
                            <input type="number" name="laborHours" id="laborHours" class="form-control" style="max-width: 150px;" step="0.5" min="0" value="@Model.LaborHours" />
                        </div>
                        <button type="submit" class="btn btn-primary">Zapisz notatki</button>
                    </form>
                </div>
            </div>
        }
        else if (!string.IsNullOrEmpty(Model.DiagnosticNotes))
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Notatki diagnostyczne</h5>
                </div>
                <div class="card-body">
                    <p>@Model.DiagnosticNotes</p>
                    @if (Model.LaborHours > 0)
                    {
                        <p><strong>Godziny pracy:</strong> @Model.LaborHours</p>
                    }
                </div>
            </div>
        }

        @if (Model.Status == ServiceOrderStatus.Completed)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Opinia</h5>
                </div>
                <div class="card-body">
                    @if (Model.Review != null)
                    {
                        <div class="mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Model.Review.Rating)
                                {
                                    <span class="text-warning">&#9733;</span>
                                }
                                else
                                {
                                    <span class="text-muted">&#9733;</span>
                                }
                            }
                            <span class="ms-2">(@Model.Review.Rating z 5)</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Review.Comment))
                        {
                            <p>@Model.Review.Comment</p>
                        }
                        <small class="text-muted">Oceniono @Model.Review.CreatedAt.ToString("yyyy-MM-dd")</small>
                    }
                    else if (User.IsInRole("Client"))
                    {
                        <a asp-controller="Reviews" asp-action="Create" asp-route-orderId="@Model.Id" class="btn btn-outline-primary">Dodaj opinię</a>
                    }
                    else
                    {
                        <p class="text-muted">Brak opinii.</p>
                    }
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                @if (Model.Status == ServiceOrderStatus.Completed)
                {
                    <a asp-action="Invoice" asp-route-id="@Model.Id" class="btn btn-outline-primary w-100 mb-2">
                        <i class="bi bi-printer"></i> Drukuj fakturę
                    </a>
                }
                <partial name="_BackButton" model='"Powrót do zleceń"' />
            </div>
        </div>
    </div>
</div>
