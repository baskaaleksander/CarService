@model ServiceOrderDetailsViewModel
@using CarService.Models.Enums
@{
    ViewData["Title"] = $"Order #{Model.Id} Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">
        Order #@Model.Id
        <partial name="_StatusBadge" model="Model.Status" />
    </h1>
</div>
<hr />

<div class="row">
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Order Information</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Vehicle</dt>
                    <dd class="col-sm-8">@Model.VehicleInfo</dd>

                    <dt class="col-sm-4">Created</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</dd>

                    @if (Model.CompletedAt.HasValue)
                    {
                        <dt class="col-sm-4">Completed</dt>
                        <dd class="col-sm-8">@Model.CompletedAt.Value.ToString("MMMM dd, yyyy HH:mm")</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.MechanicName))
                    {
                        <dt class="col-sm-4">Mechanic</dt>
                        <dd class="col-sm-8"><i class="bi bi-person-fill me-1"></i>@Model.MechanicName</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.DiagnosticNotes))
                    {
                        <dt class="col-sm-4">Notes</dt>
                        <dd class="col-sm-8">@Model.DiagnosticNotes</dd>
                    }
                </dl>
            </div>
        </div>

        @if (Model.Items.Any())
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Services & Parts</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Type</th>
                                <th class="text-center">Qty</th>
                                <th class="text-end">Unit Price</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>
                                        @if (item.Type == "Service")
                                        {
                                            <span class="badge bg-primary"><i class="bi bi-wrench me-1"></i>Service</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary"><i class="bi bi-box me-1"></i>Part</span>
                                        }
                                    </td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                    <td class="text-end">@item.TotalPrice.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-dark">
                                <td colspan="4" class="text-end"><strong>Total:</strong></td>
                                <td class="text-end"><strong>@Model.TotalCost.ToString("C")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        }

        @if (Model.Review != null)
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-chat-quote me-2"></i>Your Review</h5>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Model.Review.Rating)
                            {
                                <i class="bi bi-star-fill text-warning"></i>
                            }
                            else
                            {
                                <i class="bi bi-star text-muted"></i>
                            }
                        }
                        <span class="ms-2">(@Model.Review.Rating out of 5)</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Review.Comment))
                    {
                        <p class="mb-1">@Model.Review.Comment</p>
                    }
                    <small class="text-muted"><i class="bi bi-clock me-1"></i>Posted on @Model.Review.CreatedAt.ToString("MMMM dd, yyyy")</small>
                </div>
            </div>
        }
        else if (Model.CanReview)
        {
            <div class="card mb-3 border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-star me-2"></i>Rate your experience!</h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">Your order is complete. We'd love to hear your feedback.</p>
                    <a asp-action="AddReview" asp-route-id="@Model.Id" class="btn btn-success">
                        <i class="bi bi-pencil-square"></i> Write a Review
                    </a>
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Summary</h5>
            </div>
            <div class="card-body text-center">
                <h2 class="text-primary mb-1">@Model.TotalCost.ToString("C")</h2>
                <p class="text-muted mb-0">Total Cost</p>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <partial name="_BackButton" model='"Back to My Orders"' />
</div>
