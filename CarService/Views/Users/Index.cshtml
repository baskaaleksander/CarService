@model List<(ApplicationUser User, IList<string> Roles)>
@{
    ViewData["Title"] = "User Management";
}

<h1>User Management</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">No users found.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Current Roles</th>
                <th>Change Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (user, roles) in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>
                        @foreach (var role in roles)
                        {
                            @switch (role)
                            {
                                case "Admin":
                                    <span class="badge bg-danger me-1">Admin</span>
                                    break;
                                case "Mechanic":
                                    <span class="badge bg-primary me-1">Mechanic</span>
                                    break;
                                case "Client":
                                    <span class="badge bg-success me-1">Client</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary me-1">@role</span>
                                    break;
                            }
                        }
                        @if (!roles.Any())
                        {
                            <span class="text-muted">No roles</span>
                        }
                    </td>
                    <td>
                        <form asp-action="ChangeRole" method="post" class="d-flex align-items-center" style="gap: 0.5rem;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="userId" value="@user.Id" />
                            <select name="newRole" class="form-select form-select-sm" style="width: auto;">
                                <option value="Client" selected="@(roles.Contains("Client"))">Client</option>
                                <option value="Mechanic" selected="@(roles.Contains("Mechanic"))">Mechanic</option>
                                <option value="Admin" selected="@(roles.Contains("Admin"))">Admin</option>
                            </select>
                            <button type="submit" class="btn btn-sm btn-outline-primary">Change</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
