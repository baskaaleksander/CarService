@model List<(ApplicationUser User, IList<string> Roles)>
@{
    ViewData["Title"] = "User Management";
}

<h1><i class="bi bi-people"></i> User Management</h1>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">No users found.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Email</th>
                <th>Name</th>
                <th>Current Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (user, roles) in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.FirstName @user.LastName</td>
                    <td>
                        @foreach (var role in roles)
                        {
                            @switch (role)
                            {
                                case "Admin":
                                    <span class="badge bg-danger me-1">Admin</span>
                                    break;
                                case "Mechanic":
                                    <span class="badge bg-primary me-1">Mechanic</span>
                                    break;
                                case "Client":
                                    <span class="badge bg-success me-1">Client</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary me-1">@role</span>
                                    break;
                            }
                        }
                        @if (!roles.Any())
                        {
                            <span class="text-muted">No roles</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil"></i> Change Role
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
