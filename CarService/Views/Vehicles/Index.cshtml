@model IEnumerable<Vehicle>
@{
    ViewData["Title"] = "Moje pojazdy";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Moje pojazdy</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Dodaj pojazd
    </a>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-car-front display-1 text-muted"></i>
        <h3 class="mt-3">Brak pojazdów</h3>
        <p class="text-muted">Zarejestruj swój pierwszy pojazd, aby rozpocząć korzystanie z usług.</p>
        <a asp-action="Create" class="btn btn-primary btn-lg mt-2">
            <i class="bi bi-plus-lg"></i> Dodaj pierwszy pojazd
        </a>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var vehicle in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-car-front me-2"></i>@vehicle.Brand @vehicle.Model
                        </h5>
                        <dl class="row mb-0">
                            <dt class="col-5">Numer rejestracyjny</dt>
                            <dd class="col-7"><strong>@vehicle.RegistrationNumber</strong></dd>
                            <dt class="col-5">VIN</dt>
                            <dd class="col-7"><code class="small">@vehicle.VIN</code></dd>
                        </dl>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-eye"></i> Szczegóły
                            </a>
                            <a asp-action="Edit" asp-route-id="@vehicle.Id" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-pencil"></i> Edytuj
                            </a>
                            <a asp-action="Delete" asp-route-id="@vehicle.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> Usuń
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
