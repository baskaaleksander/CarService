@model AddNotesViewModel
@{
    ViewData["Title"] = "Add Notes";
}

<h1>Diagnostic Notes</h1>
<h4 class="text-muted">Order #@Model.OrderId</h4>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ExistingNotes) && Model.ExistingNotes != Model.Notes)
                {
                    <div class="mb-4">
                        <label class="form-label">Current Notes</label>
                        <div class="border rounded p-3 bg-light" style="white-space: pre-wrap;">@Model.ExistingNotes</div>
                    </div>
                }

                <form asp-action="AddNotes" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="OrderId" />
                    <input type="hidden" asp-for="ExistingNotes" />

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="8" placeholder="Enter diagnostic notes, observations, recommendations..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                        <div class="form-text">Maximum 2000 characters.</div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save Notes</button>
                        <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
