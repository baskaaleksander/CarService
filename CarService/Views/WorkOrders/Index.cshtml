@model IEnumerable<ServiceOrderSummaryViewModel>
@{
    ViewData["Title"] = "My Work Orders";
}

<h1><i class="bi bi-wrench"></i> My Work Orders</h1>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h5 class="alert-heading">No Work Orders</h5>
        <p class="mb-0">You don't have any work orders assigned to you yet.</p>
    </div>
}
else
{
    <ul class="nav nav-tabs mb-3" id="statusTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab">
                All <span class="badge bg-secondary">@Model.Count()</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab">
                Pending <span class="badge bg-warning text-dark">@Model.Count(o => o.Status == ServiceOrderStatus.Pending || o.Status == ServiceOrderStatus.Accepted)</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="inprogress-tab" data-bs-toggle="tab" data-bs-target="#inprogress" type="button" role="tab">
                In Progress <span class="badge bg-primary">@Model.Count(o => o.Status == ServiceOrderStatus.InProgress)</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button" role="tab">
                Completed <span class="badge bg-success">@Model.Count(o => o.Status == ServiceOrderStatus.Completed)</span>
            </button>
        </li>
    </ul>

    <div class="tab-content" id="statusTabsContent">
        <div class="tab-pane fade show active" id="all" role="tabpanel">
            <partial name="_OrdersTable" model="Model" />
        </div>
        <div class="tab-pane fade" id="pending" role="tabpanel">
            <partial name="_OrdersTable" model="Model.Where(o => o.Status == ServiceOrderStatus.Pending || o.Status == ServiceOrderStatus.Accepted)" />
        </div>
        <div class="tab-pane fade" id="inprogress" role="tabpanel">
            <partial name="_OrdersTable" model="Model.Where(o => o.Status == ServiceOrderStatus.InProgress)" />
        </div>
        <div class="tab-pane fade" id="completed" role="tabpanel">
            <partial name="_OrdersTable" model="Model.Where(o => o.Status == ServiceOrderStatus.Completed)" />
        </div>
    </div>
}
