@model CarService.Models.Enums.ServiceOrderStatus

@{
    var badgeClass = Model switch
    {
        ServiceOrderStatus.Pending => "bg-warning text-dark",
        ServiceOrderStatus.Accepted => "bg-info",
        ServiceOrderStatus.InProgress => "bg-primary",
        ServiceOrderStatus.Completed => "bg-success",
        ServiceOrderStatus.Cancelled => "bg-secondary",
        _ => "bg-secondary"
    };

    var statusText = Model switch
    {
        ServiceOrderStatus.Pending => "Oczekujące",
        ServiceOrderStatus.Accepted => "Przyjęte",
        ServiceOrderStatus.InProgress => "W trakcie",
        ServiceOrderStatus.Completed => "Zakończone",
        ServiceOrderStatus.Cancelled => "Anulowane",
        _ => Model.ToString()
    };
}

<span class="badge @badgeClass">@statusText</span>
