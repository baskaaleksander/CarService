@using CarService.Services.Interfaces
@model DashboardStatsDto
@{
    ViewData["Title"] = "Pulpit";
}

<h1><i class="bi bi-speedometer2"></i> Pulpit</h1>
<hr />

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase">Wszystkie zlecenia</h6>
                        <h2 class="mb-0">@Model.TotalOrders</h2>
                    </div>
                    <div class="fs-1 opacity-50">
                        <i class="bi bi-clipboard-check"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase">Zlecenia oczekujące</h6>
                        <h2 class="mb-0">@Model.PendingOrders</h2>
                    </div>
                    <div class="fs-1 opacity-50">
                        <i class="bi bi-hourglass-split"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-bg-info">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase">Aktywni mechanicy</h6>
                        <h2 class="mb-0">@Model.ActiveMechanics</h2>
                    </div>
                    <div class="fs-1 opacity-50">
                        <i class="bi bi-wrench-adjustable"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase">Przychód w miesiącu</h6>
                        <h2 class="mb-0">@Model.MonthRevenue.ToString("C")</h2>
                    </div>
                    <div class="fs-1 opacity-50">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-lightning-charge"></i> Szybkie akcje</h5>
            </div>
            <div class="list-group list-group-flush">
                <a asp-controller="ServiceOrders" asp-action="Index" class="list-group-item list-group-item-action">
                    <i class="bi bi-clock me-2"></i> Zobacz oczekujące
                </a>
                <a asp-controller="ServiceOrders" asp-action="Create" class="list-group-item list-group-item-action">
                    <i class="bi bi-plus-circle me-2"></i> Utwórz nowe zlecenie
                </a>
                <a asp-controller="Parts" asp-action="Index" class="list-group-item list-group-item-action">
                    <i class="bi bi-box me-2"></i> Sprawdź magazyn
                </a>
                <a asp-action="Revenue" class="list-group-item list-group-item-action">
                    <i class="bi bi-graph-up me-2"></i> Zobacz raporty
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <h5><i class="bi bi-file-earmark-bar-graph"></i> Szczegółowe raporty</h5>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h6 class="card-title">Raport przychodów</h6>
                        <p class="card-text"><small class="text-muted">Zobacz miesięczne przychody i trendy.</small></p>
                        <a asp-action="Revenue" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-graph-up"></i> Zobacz raport
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h6 class="card-title">Najpopularniejsze usługi</h6>
                        <p class="card-text"><small class="text-muted">Zobacz najczęściej wybierane usługi.</small></p>
                        <a asp-action="PopularServices" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-star"></i> Zobacz raport
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h6 class="card-title">Efektywność mechaników</h6>
                        <p class="card-text"><small class="text-muted">Analizuj wydajność mechaników.</small></p>
                        <a asp-action="MechanicEfficiency" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-person-check"></i> Zobacz raport
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
