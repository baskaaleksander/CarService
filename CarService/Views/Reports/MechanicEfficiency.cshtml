@using CarService.Services.Interfaces
@model IEnumerable<MechanicEfficiencyDto>
@{
    ViewData["Title"] = "Efektywność mechaników";
}

<h1><i class="bi bi-person-check"></i> Efektywność mechaników</h1>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">Brak danych o wydajności mechaników.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Mechanik</th>
                <th class="text-end">Zakończone zlecenia</th>
                <th class="text-end">Średni czas realizacji (godz.)</th>
                <th>Wynik</th>
            </tr>
        </thead>
        <tbody>
            @{
                var avgOverall = Model.Any() ? Model.Average(m => m.AvgCompletionHours) : 0;
            }
            @foreach (var mechanic in Model)
            {
                <tr>
                    <td>@mechanic.MechanicName</td>
                    <td class="text-end">@mechanic.CompletedOrders</td>
                    <td class="text-end">@mechanic.AvgCompletionHours.ToString("0.0") godz.</td>
                    <td>
                        @if (mechanic.AvgCompletionHours <= avgOverall * 0.8m)
                        {
                            <span class="badge bg-success">Świetna</span>
                        }
                        else if (mechanic.AvgCompletionHours <= avgOverall)
                        {
                            <span class="badge bg-primary">Dobra</span>
                        }
                        else if (mechanic.AvgCompletionHours <= avgOverall * 1.2m)
                        {
                            <span class="badge bg-warning text-dark">Średnia</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Poniżej średniej</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot class="table-light">
            <tr class="fw-bold">
                <td>Średnia ogólna</td>
                <td class="text-end">@Model.Sum(m => m.CompletedOrders)</td>
                <td class="text-end">@avgOverall.ToString("0.0") godz.</td>
                <td></td>
            </tr>
        </tfoot>
    </table>

    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-info-circle"></i> Legenda wyników</h5>
        </div>
        <div class="card-body">
            <ul class="list-unstyled mb-0">
                <li><span class="badge bg-success me-2">Świetna</span> Co najmniej 20% poniżej średniego czasu realizacji</li>
                <li><span class="badge bg-primary me-2">Dobra</span> Na poziomie lub poniżej średniego czasu realizacji</li>
                <li><span class="badge bg-warning text-dark me-2">Średnia</span> Do 20% powyżej średniego czasu realizacji</li>
                <li><span class="badge bg-danger me-2">Poniżej średniej</span> Ponad 20% powyżej średniego czasu realizacji</li>
            </ul>
        </div>
    </div>
}

<div class="mt-4">
    <partial name="_BackButton" model='"Powrót do pulpitu"' />
</div>
