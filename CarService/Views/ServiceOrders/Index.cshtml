@model IEnumerable<ServiceOrder>
@{
    ViewData["Title"] = "Service Orders";
}

<h1>Service Orders</h1>

@if (User.IsInRole("Client"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Order</a>
    </p>
}

@if (!Model.Any())
{
    <div class="alert alert-info">No service orders found.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Order #</th>
                <th>Vehicle</th>
                @if (User.IsInRole("Admin"))
                {
                    <th>Client</th>
                    <th>Mechanic</th>
                }
                <th>Status</th>
                <th>Created</th>
                <th>Total Cost</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Vehicle?.RegistrationNumber</td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>@order.Client?.Email</td>
                        <td>@(order.Mechanic?.Email ?? "Unassigned")</td>
                    }
                    <td>
                        @switch (order.Status)
                        {
                            case ServiceOrderStatus.Pending:
                                <span class="badge bg-warning text-dark">Pending</span>
                                break;
                            case ServiceOrderStatus.Accepted:
                                <span class="badge bg-primary">Accepted</span>
                                break;
                            case ServiceOrderStatus.InProgress:
                                <span class="badge bg-info">In Progress</span>
                                break;
                            case ServiceOrderStatus.Completed:
                                <span class="badge bg-success">Completed</span>
                                break;
                            case ServiceOrderStatus.Cancelled:
                                <span class="badge bg-secondary">Cancelled</span>
                                break;
                        }
                    </td>
                    <td>@order.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>@order.TotalCost.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">Details</a>
                        @if (User.IsInRole("Admin") && order.MechanicId == null)
                        {
                            <a asp-action="Assign" asp-route-id="@order.Id" class="btn btn-sm btn-outline-secondary">Assign</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
