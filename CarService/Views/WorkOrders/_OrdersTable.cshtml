@model IEnumerable<ServiceOrderSummaryViewModel>

@if (!Model.Any())
{
    <p class="text-muted">No orders in this category.</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Order #</th>
                <th>Vehicle</th>
                <th>Status</th>
                <th>Created</th>
                <th>Total Cost</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.VehicleInfo</td>
                    <td><span class="badge @order.StatusBadgeClass">@order.Status</span></td>
                    <td>@order.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>@order.TotalCost.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
