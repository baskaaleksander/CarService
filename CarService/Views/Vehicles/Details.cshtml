@model VehicleDetailsViewModel
@{
    ViewData["Title"] = $"{Model.Brand} {Model.Model}";
}

<h1>@Model.Brand @Model.Model</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-car-front me-2"></i>Vehicle Information</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Brand</dt>
                    <dd class="col-sm-9">@Model.Brand</dd>

                    <dt class="col-sm-3">Model</dt>
                    <dd class="col-sm-9">@Model.Model</dd>

                    <dt class="col-sm-3">VIN</dt>
                    <dd class="col-sm-9"><code>@Model.VIN</code></dd>

                    <dt class="col-sm-3">Registration</dt>
                    <dd class="col-sm-9"><strong>@Model.RegistrationNumber</strong></dd>
                </dl>
            </div>
            <div class="card-footer bg-transparent">
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-controller="Appointments" asp-action="Book" class="btn btn-primary">
                        <i class="bi bi-calendar-plus"></i> Book Service
                    </a>
                    <partial name="_BackButton" model='"Back to Vehicles"' />
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Service History</h5>
            </div>
            @if (Model.ServiceHistory.Any())
            {
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Order #</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th class="text-end">Total Cost</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.ServiceHistory)
                            {
                                <tr>
                                    <td>#@order.Id</td>
                                    <td>@order.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <partial name="_StatusBadge" model="order.Status" />
                                    </td>
                                    <td class="text-end">@order.TotalCost.ToString("C")</td>
                                    <td class="text-end">
                                        <a asp-controller="MyOrders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="card-body text-center text-muted py-4">
                    <i class="bi bi-inbox display-4"></i>
                    <p class="mt-2 mb-0">No service history for this vehicle yet.</p>
                </div>
            }
        </div>
    </div>
</div>
