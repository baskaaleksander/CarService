@model VehicleEditViewModel
@{
    ViewData["Title"] = "Edytuj pojazd";
}

<h1>Edytuj pojazd</h1>
<hr />

<partial name="_ValidationSummary" />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Brand" class="form-label"></label>
                <input asp-for="Brand" class="form-control" placeholder="np. Toyota" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Model" class="form-label"></label>
                <input asp-for="Model" class="form-control" placeholder="np. Corolla" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="VIN" class="form-label"></label>
                <input asp-for="VIN" class="form-control" maxlength="17" style="text-transform: uppercase" placeholder="np. 1HGBH41JXMN109186" />
                <span asp-validation-for="VIN" class="text-danger"></span>
                <div class="form-text">Numer VIN (dokładnie 17 znaków)</div>
            </div>
            <div class="mb-3">
                <label asp-for="RegistrationNumber" class="form-label"></label>
                <input asp-for="RegistrationNumber" class="form-control" style="text-transform: uppercase" placeholder="np. WA 12345" />
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                <div class="form-text">Polski format rejestracji (np. WA 12345, KR 1234A)</div>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg"></i> Zapisz zmiany
                </button>
                <partial name="_BackButton" model='"Powrót do pojazdów"' />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
