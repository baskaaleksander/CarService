@using CarService.Services.Interfaces
@model IEnumerable<MonthlyRevenueDto>
@{
    ViewData["Title"] = "Raport przychodów";
    var year = (int)ViewBag.Year;
}

<h1><i class="bi bi-graph-up"></i> Raport przychodów</h1>
<hr />

<div class="mb-4">
    <form method="get" class="row g-3 align-items-end">
        <div class="col-auto">
            <label for="year" class="form-label">Wybierz rok</label>
            <select name="year" id="year" class="form-select" onchange="this.form.submit()">
                @for (int y = DateTime.UtcNow.Year; y >= DateTime.UtcNow.Year - 5; y--)
                {
                    <option value="@y" selected="@(y == year)">@y</option>
                }
            </select>
        </div>
    </form>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Brak danych o przychodach dla @year.</div>
}
else
{
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-bg-success">
                <div class="card-body text-center">
                    <h6>Łączny przychód (@year)</h6>
                    <h3>@Model.Sum(m => m.Revenue).ToString("C")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-bg-primary">
                <div class="card-body text-center">
                    <h6>Łączna liczba zleceń (@year)</h6>
                    <h3>@Model.Sum(m => m.OrderCount)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-bg-info">
                <div class="card-body text-center">
                    <h6>Średnia na zlecenie</h6>
                    <h3>
                        @if (Model.Sum(m => m.OrderCount) > 0)
                        {
                            @((Model.Sum(m => m.Revenue) / Model.Sum(m => m.OrderCount)).ToString("C"))
                        }
                        else
                        {
                            @(0m.ToString("C"))
                        }
                    </h3>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Miesiąc</th>
                <th class="text-end">Przychód</th>
                <th class="text-end">Liczba zleceń</th>
                <th class="text-end">Średnia na zlecenie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MonthName</td>
                    <td class="text-end">@item.Revenue.ToString("C")</td>
                    <td class="text-end">@item.OrderCount</td>
                    <td class="text-end">
                        @if (item.OrderCount > 0)
                        {
                            @((item.Revenue / item.OrderCount).ToString("C"))
                        }
                        else
                        {
                            @(0m.ToString("C"))
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot class="table-light">
            <tr class="fw-bold">
                <td>Razem</td>
                <td class="text-end">@Model.Sum(m => m.Revenue).ToString("C")</td>
                <td class="text-end">@Model.Sum(m => m.OrderCount)</td>
                <td class="text-end">
                    @if (Model.Sum(m => m.OrderCount) > 0)
                    {
                        @((Model.Sum(m => m.Revenue) / Model.Sum(m => m.OrderCount)).ToString("C"))
                    }
                    else
                    {
                        @(0m.ToString("C"))
                    }
                </td>
            </tr>
        </tfoot>
    </table>
}

<partial name="_BackButton" model='"Powrót do pulpitu"' />
