@model IEnumerable<Part>
@{
    ViewData["Title"] = "Parts";
}

<h1>Parts Inventory</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Part</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">No parts in inventory yet.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Stock Quantity</th>
                <th>Unit Price</th>
                <th>Stock Adjustment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var part in Model)
            {
                <tr class="@(part.StockQuantity == 0 ? "table-danger" : part.StockQuantity < 5 ? "table-warning" : "")">
                    <td>@part.Name</td>
                    <td>
                        @part.StockQuantity
                        @if (part.StockQuantity == 0)
                        {
                            <span class="badge bg-danger ms-1">Out of Stock</span>
                        }
                        else if (part.StockQuantity < 5)
                        {
                            <span class="badge bg-warning text-dark ms-1">Low Stock</span>
                        }
                    </td>
                    <td>@part.UnitPrice.ToString("C")</td>
                    <td>
                        <form asp-action="UpdateStock" asp-route-id="@part.Id" method="post" class="d-flex align-items-center" style="gap: 0.5rem; max-width: 200px;">
                            @Html.AntiForgeryToken()
                            <input type="number" name="quantityChange" class="form-control form-control-sm" style="width: 80px;" placeholder="+/-" />
                            <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
                        </form>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@part.Id" class="btn btn-sm btn-warning">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
