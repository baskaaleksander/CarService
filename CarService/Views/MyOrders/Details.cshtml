@model ServiceOrderDetailsViewModel
@{
    ViewData["Title"] = $"Order #{Model.Id} Details";
}

<h1>Order #@Model.Id</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0">Order Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Vehicle</dt>
                    <dd class="col-sm-8">@Model.VehicleInfo</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @{
                            var statusClass = Model.Status switch
                            {
                                "Pending" => "bg-warning",
                                "InProgress" => "bg-info",
                                "Completed" => "bg-success",
                                "Cancelled" => "bg-secondary",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @statusClass">@Model.Status</span>
                    </dd>

                    <dt class="col-sm-4">Created</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</dd>

                    @if (Model.CompletedAt.HasValue)
                    {
                        <dt class="col-sm-4">Completed</dt>
                        <dd class="col-sm-8">@Model.CompletedAt.Value.ToString("MMMM dd, yyyy HH:mm")</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.MechanicName))
                    {
                        <dt class="col-sm-4">Mechanic</dt>
                        <dd class="col-sm-8">@Model.MechanicName</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.DiagnosticNotes))
                    {
                        <dt class="col-sm-4">Notes</dt>
                        <dd class="col-sm-8">@Model.DiagnosticNotes</dd>
                    }
                </dl>
            </div>
        </div>

        @if (Model.Items.Any())
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Services & Parts</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Type</th>
                                <th class="text-center">Qty</th>
                                <th class="text-end">Unit Price</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>
                                        @if (item.Type == "Service")
                                        {
                                            <span class="badge bg-primary">Service</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Part</span>
                                        }
                                    </td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                    <td class="text-end">@item.TotalPrice.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-dark">
                                <td colspan="4" class="text-end"><strong>Total:</strong></td>
                                <td class="text-end"><strong>@Model.TotalCost.ToString("C")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        }

        @if (Model.Review != null)
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Your Review</h5>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Model.Review.Rating)
                            {
                                <span class="text-warning">&#9733;</span>
                            }
                            else
                            {
                                <span class="text-muted">&#9734;</span>
                            }
                        }
                        <span class="ms-2">(@Model.Review.Rating out of 5)</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Review.Comment))
                    {
                        <p class="mb-1">@Model.Review.Comment</p>
                    }
                    <small class="text-muted">Posted on @Model.Review.CreatedAt.ToString("MMMM dd, yyyy")</small>
                </div>
            </div>
        }
        else if (Model.CanReview)
        {
            <div class="alert alert-info">
                <strong>Rate your experience!</strong>
                <p class="mb-2">Your order is complete. We'd love to hear your feedback.</p>
                <a asp-action="AddReview" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">Write a Review</a>
            </div>
        }
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Summary</h5>
            </div>
            <div class="card-body">
                <h3 class="text-center text-primary">@Model.TotalCost.ToString("C")</h3>
                <p class="text-center text-muted mb-0">Total Cost</p>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to My Orders</a>
</div>
