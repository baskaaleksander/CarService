@model ReviewCreateViewModel
@{
    ViewData["Title"] = "Dodaj opinię";
}

<h1>Dodaj opinię</h1>
<p class="text-muted">Dla: @Model.VehicleInfo</p>
<hr />

<partial name="_ValidationSummary" />

<div class="row">
    <div class="col-md-6">
        <form asp-action="AddReview" asp-route-id="@Model.ServiceOrderId" method="post">
            <div class="mb-4">
                <label asp-for="Rating" class="form-label">Twoja ocena</label>
                <div class="btn-group d-flex" role="group" aria-label="Rating selection">
                    @for (int i = 1; i <= 5; i++)
                    {
                        var starId = $"rating_{i}";
                        <input type="radio" class="btn-check" name="Rating" id="@starId" value="@i" autocomplete="off" @(Model.Rating == i ? "checked" : "")>
                        <label class="btn btn-outline-warning btn-lg flex-fill" for="@starId">
                            @for (int j = 1; j <= i; j++)
                            {
                                <i class="bi bi-star-fill"></i>
                            }
                        </label>
                    }
                </div>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Comment" class="form-label">Twoja opinia (opcjonalnie)</label>
                <textarea asp-for="Comment" class="form-control" rows="5" placeholder="Podziel się z nami swoją opinią..."></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
                <div class="form-text">Napisz, co Ci się podobało lub co możemy poprawić.</div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-send"></i> Wyślij opinię
                </button>
                <a asp-action="Details" asp-route-id="@Model.ServiceOrderId" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-x-lg"></i> Anuluj
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
