@model WorkOrderDetailsViewModel
@{
    ViewData["Title"] = $"Work Order #{Model.Id}";
}

<h1>Work Order #@Model.Id <partial name="_StatusBadge" model="Model.Status" /></h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-car-front"></i> Vehicle Information</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Vehicle</dt>
                    <dd class="col-sm-8">@Model.VehicleInfo</dd>
                    <dt class="col-sm-4">Client</dt>
                    <dd class="col-sm-8">@Model.ClientName</dd>
                </dl>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-journal-text"></i> Diagnostic Notes</h5>
                @if (Model.CanUpdateStatus)
                {
                    <a asp-action="AddNotes" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                }
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.DiagnosticNotes))
                {
                    <p style="white-space: pre-wrap;" class="mb-0">@Model.DiagnosticNotes</p>
                }
                else
                {
                    <p class="text-muted mb-0">No diagnostic notes added yet.</p>
                }
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-clock"></i> Labor Hours</h5>
                @if (Model.CanUpdateStatus)
                {
                    <a asp-action="SetLaborHours" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-pencil"></i> Update
                    </a>
                }
            </div>
            <div class="card-body">
                <p class="fs-4 mb-0"><strong>@Model.LaborHours</strong> hours</p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        @if (Model.CanUpdateStatus)
        {
            <div class="card mb-4 border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="UpdateStatus" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-arrow-repeat"></i> Update Status
                        </a>
                        @if (Model.CanAddItems)
                        {
                            <a asp-action="AddService" asp-route-id="@Model.Id" class="btn btn-outline-success">
                                <i class="bi bi-plus-circle"></i> Add Service
                            </a>
                            <a asp-action="AddParts" asp-route-id="@Model.Id" class="btn btn-outline-info">
                                <i class="bi bi-box"></i> Add Parts
                            </a>
                        }
                    </div>
                </div>
            </div>
        }

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-list-check"></i> Services & Parts</h5>
            </div>
            <div class="card-body">
                @if (Model.Items.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model.Items)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    @if (item.Type == "Service")
                                    {
                                        <span class="badge bg-primary me-2">Service</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary me-2">Part</span>
                                    }
                                    @item.Name
                                    @if (item.Quantity > 1)
                                    {
                                        <small class="text-muted">(x@item.Quantity)</small>
                                    }
                                </div>
                                <span>@item.TotalPrice.ToString("C")</span>
                            </li>
                        }
                        <li class="list-group-item d-flex justify-content-between align-items-center bg-light">
                            <strong>Total</strong>
                            <strong>@Model.TotalCost.ToString("C")</strong>
                        </li>
                    </ul>
                }
                else
                {
                    <p class="text-muted mb-0">No items added yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<partial name="_BackButton" model='"Back to Work Orders"' />
