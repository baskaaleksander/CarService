@model IEnumerable<ServiceOrderSummaryViewModel>

@if (!Model.Any())
{
    <p class="text-muted">Brak zleceń w tej kategorii.</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Zlecenie #</th>
                <th>Pojazd</th>
                <th>Status</th>
                <th>Utworzono</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.OrderByDescending(o => o.CreatedAt))
            {
                <tr>
                    <td><strong>#@order.Id</strong></td>
                    <td>@order.VehicleInfo</td>
                    <td><partial name="_StatusBadge" model="order.Status" /></td>
                    <td>@order.CreatedAt.ToString("d")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">Przejdź do zlecenia</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
