@model AppointmentBookingViewModel
@{
    ViewData["Title"] = "Umów wizytę";
}

<h1>Umów wizytę</h1>
<hr />

<partial name="_ValidationSummary" />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Book" method="post">
            <div class="mb-3">
                <label asp-for="VehicleId" class="form-label">Wybierz pojazd</label>
                <select asp-for="VehicleId" asp-items="Model.AvailableVehicles" class="form-select form-select-lg">
                    <option value="">-- Wybierz pojazd --</option>
                </select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Wybierz usługi (opcjonalnie)</label>
                <div class="border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                    @if (Model.AvailableServices.Any())
                    {
                        @foreach (var service in Model.AvailableServices)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="SelectedServiceIds" value="@service.Value" id="service_@service.Value">
                                <label class="form-check-label" for="service_@service.Value">
                                    @service.Text
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted mb-0">Brak dostępnych usług.</p>
                    }
                </div>
                <div class="form-text">Wybierz potrzebne usługi lub pozostaw puste, aby zlecić diagnozę.</div>
            </div>

            <div class="mb-4">
                <label asp-for="Description" class="form-label">Opis</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Opisz problem lub potrzebną usługę..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <div class="form-text">Opisz problemy lub uwagi dotyczące pojazdu.</div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-calendar-check"></i> Umów wizytę
                </button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-x-lg"></i> Anuluj
                </a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Potrzebujesz pomocy?</h5>
            </div>
            <div class="card-body">
                <p><strong>Krok 1:</strong> Wybierz pojazd, który ma być serwisowany.</p>
                <p><strong>Krok 2:</strong> Wybierz potrzebne usługi (opcjonalnie).</p>
                <p><strong>Krok 3:</strong> Opisz problemy lub uwagi.</p>
                <p><strong>Krok 4:</strong> Kliknij „Umów wizytę”, aby wysłać.</p>
                <hr>
                <p class="mb-0 small text-muted">
                    <i class="bi bi-clock me-1"></i>Nasz zespół przejrzy zgłoszenie i przydzieli mechanika tak szybko, jak to możliwe.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
