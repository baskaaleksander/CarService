@model IEnumerable<Vehicle>
@{
    ViewData["Title"] = "My Vehicles";
}

<h1>My Vehicles</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Vehicle</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">You haven't registered any vehicles yet.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Brand</th>
                <th>Model</th>
                <th>VIN</th>
                <th>Registration Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model)
            {
                <tr>
                    <td>@vehicle.Brand</td>
                    <td>@vehicle.Model</td>
                    <td>@vehicle.VIN</td>
                    <td>@vehicle.RegistrationNumber</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@vehicle.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form asp-action="Delete" asp-route-id="@vehicle.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this vehicle?')">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
