@model UpdateStatusViewModel
@{
    ViewData["Title"] = "Update Status";
}

<h1>Update Status</h1>
<h4 class="text-muted">Order #@Model.OrderId</h4>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="mb-4">
                    <label class="form-label">Current Status</label>
                    <div>
                        @{
                            var currentBadgeClass = Model.CurrentStatus switch
                            {
                                ServiceOrderStatus.Pending => "bg-warning text-dark",
                                ServiceOrderStatus.Accepted => "bg-primary",
                                ServiceOrderStatus.InProgress => "bg-info",
                                ServiceOrderStatus.Completed => "bg-success",
                                ServiceOrderStatus.Cancelled => "bg-secondary",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @currentBadgeClass fs-6">@Model.CurrentStatus</span>
                    </div>
                </div>

                @if (!Model.AvailableStatuses.Any())
                {
                    <div class="alert alert-info">No status transitions available for this order.</div>
                    <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-secondary">Back to Details</a>
                }
                else
                {
                    <form asp-action="UpdateStatus" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="OrderId" />
                        <input type="hidden" asp-for="CurrentStatus" />

                        <div class="mb-3">
                            <label asp-for="NewStatus" class="form-label">New Status</label>
                            <select asp-for="NewStatus" asp-items="Model.AvailableStatuses" class="form-select">
                                <option value="">-- Select Status --</option>
                            </select>
                            <span asp-validation-for="NewStatus" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Update Status</button>
                            <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
