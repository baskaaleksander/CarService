@model ServiceOrder
@{
    Layout = null;
    var subtotal = Model.Items.Sum(i => i.Quantity * i.UnitPrice);
    var vat = subtotal * 0.23m;
    var total = subtotal + vat;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invoice #@Model.Id - CarService</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }
        .invoice-container {
            max-width: 800px;
            margin: 20px auto;
            background: white;
            padding: 40px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .invoice-header {
            border-bottom: 2px solid #0d6efd;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }
        .invoice-title {
            color: #0d6efd;
            font-weight: bold;
        }
        .info-section {
            margin-bottom: 30px;
        }
        .info-section h6 {
            color: #6c757d;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 1px;
            margin-bottom: 10px;
        }
        .table th {
            background-color: #f8f9fa;
        }
        .totals-section {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
        }
        @@media print {
            body {
                background-color: white;
            }
            .invoice-container {
                box-shadow: none;
                margin: 0;
                padding: 20px;
            }
            .no-print {
                display: none !important;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="no-print text-center my-3">
            <button onclick="window.print()" class="btn btn-primary">
                <i class="bi bi-printer"></i> Print Invoice
            </button>
            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Order
            </a>
        </div>

        <div class="invoice-container">
            <div class="invoice-header">
                <div class="row">
                    <div class="col-6">
                        <h2 class="invoice-title"><i class="bi bi-car-front"></i> CarService</h2>
                        <p class="text-muted mb-0">Professional Auto Service</p>
                    </div>
                    <div class="col-6 text-end">
                        <h3>INVOICE</h3>
                        <p class="mb-0"><strong>#@Model.Id</strong></p>
                        <p class="text-muted mb-0">Date: @Model.CompletedAt?.ToString("d") ?? @DateTime.Now.ToString("d")</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 info-section">
                    <h6>Bill To</h6>
                    <p class="mb-0"><strong>@Model.Client?.FirstName @Model.Client?.LastName</strong></p>
                    <p class="mb-0">@Model.Client?.Email</p>
                </div>
                <div class="col-md-6 info-section">
                    <h6>Vehicle</h6>
                    <p class="mb-0"><strong>@Model.Vehicle?.Brand @Model.Vehicle?.Model</strong></p>
                    <p class="mb-0">Reg: @Model.Vehicle?.RegistrationNumber</p>
                    <p class="mb-0">VIN: @Model.Vehicle?.VIN</p>
                </div>
            </div>

            <div class="info-section">
                <h6>Items</h6>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Type</th>
                            <th class="text-center">Qty</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-end">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@(item.Service?.Name ?? item.Part?.Name)</td>
                                <td>@(item.ServiceId.HasValue ? "Service" : "Part")</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                <td class="text-end">@((item.Quantity * item.UnitPrice).ToString("C"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="row justify-content-end">
                <div class="col-md-5">
                    <div class="totals-section">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>@subtotal.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>VAT (23%):</span>
                            <span>@vat.ToString("C")</span>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between">
                            <strong>Total:</strong>
                            <strong class="text-primary fs-5">@total.ToString("C")</strong>
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.DiagnosticNotes))
            {
                <div class="info-section mt-4">
                    <h6>Notes</h6>
                    <p class="text-muted">@Model.DiagnosticNotes</p>
                </div>
            }

            <div class="text-center mt-4 pt-4 border-top">
                <p class="text-muted mb-0">Thank you for your business!</p>
            </div>
        </div>
    </div>
</body>
</html>
