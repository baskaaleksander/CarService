@model AddPartItemViewModel
@{
    ViewData["Title"] = "Add Parts to Order";
}

<h1>Add Parts to Order</h1>
<p class="text-muted">Order #@Model.OrderId</p>
<hr />

<partial name="_ValidationSummary" />

<div class="row">
    <div class="col-md-6">
        @if (!Model.AvailableParts.Any())
        {
            <div class="alert alert-warning">No parts available in stock.</div>
            <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Details
            </a>
        }
        else
        {
            <form asp-action="AddParts" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="OrderId" />

                <div class="mb-3">
                    <label asp-for="PartId" class="form-label">Part</label>
                    <select asp-for="PartId" asp-items="Model.AvailableParts" class="form-select">
                        <option value="">-- Select Part --</option>
                    </select>
                    <span asp-validation-for="PartId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label">Quantity</label>
                    <input asp-for="Quantity" class="form-control" type="number" min="1" max="100" style="max-width: 150px;" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-lg"></i> Add Part
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
