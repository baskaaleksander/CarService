@model ServiceOrder
@{
    ViewData["Title"] = $"Order #{Model.Id}";
}

<h1>Order #@Model.Id</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Order Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl>
                            <dt>Status</dt>
                            <dd>
                                @switch (Model.Status)
                                {
                                    case ServiceOrderStatus.Pending:
                                        <span class="badge bg-warning text-dark">Pending</span>
                                        break;
                                    case ServiceOrderStatus.Accepted:
                                        <span class="badge bg-primary">Accepted</span>
                                        break;
                                    case ServiceOrderStatus.InProgress:
                                        <span class="badge bg-info">In Progress</span>
                                        break;
                                    case ServiceOrderStatus.Completed:
                                        <span class="badge bg-success">Completed</span>
                                        break;
                                    case ServiceOrderStatus.Cancelled:
                                        <span class="badge bg-secondary">Cancelled</span>
                                        break;
                                }
                            </dd>
                            <dt>Created</dt>
                            <dd>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
                            @if (Model.CompletedAt.HasValue)
                            {
                                <dt>Completed</dt>
                                <dd>@Model.CompletedAt.Value.ToString("yyyy-MM-dd HH:mm")</dd>
                            }
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl>
                            <dt>Vehicle</dt>
                            <dd>@Model.Vehicle?.Brand @Model.Vehicle?.Model (@Model.Vehicle?.RegistrationNumber)</dd>
                            <dt>Client</dt>
                            <dd>@Model.Client?.FirstName @Model.Client?.LastName (@Model.Client?.Email)</dd>
                            <dt>Mechanic</dt>
                            <dd>@(Model.Mechanic != null ? $"{Model.Mechanic.FirstName} {Model.Mechanic.LastName} ({Model.Mechanic.Email})" : "Unassigned")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        @if (User.IsInRole("Mechanic") || User.IsInRole("Admin"))
        {
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Status Update</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateStatus" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="btn-group" role="group">
                            @if (Model.Status == ServiceOrderStatus.Pending)
                            {
                                <button type="submit" name="status" value="@ServiceOrderStatus.Accepted" class="btn btn-primary">Accept</button>
                                <button type="submit" name="status" value="@ServiceOrderStatus.Cancelled" class="btn btn-secondary">Cancel</button>
                            }
                            @if (Model.Status == ServiceOrderStatus.Accepted)
                            {
                                <button type="submit" name="status" value="@ServiceOrderStatus.InProgress" class="btn btn-info">Start Work</button>
                                <button type="submit" name="status" value="@ServiceOrderStatus.Cancelled" class="btn btn-secondary">Cancel</button>
                            }
                            @if (Model.Status == ServiceOrderStatus.InProgress)
                            {
                                <button type="submit" name="status" value="@ServiceOrderStatus.Completed" class="btn btn-success">Complete</button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        }

        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Items</h5>
                @if ((User.IsInRole("Mechanic") || User.IsInRole("Admin")) && Model.Status != ServiceOrderStatus.Completed && Model.Status != ServiceOrderStatus.Cancelled)
                {
                    <a asp-action="AddItem" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Add Item</a>
                }
            </div>
            <div class="card-body">
                @if (Model.Items.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Name</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Total</th>
                                @if ((User.IsInRole("Mechanic") || User.IsInRole("Admin")) && Model.Status != ServiceOrderStatus.Completed && Model.Status != ServiceOrderStatus.Cancelled)
                                {
                                    <th></th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@(item.ServiceId.HasValue ? "Service" : "Part")</td>
                                    <td>@(item.Service?.Name ?? item.Part?.Name)</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice.ToString("C")</td>
                                    <td>@((item.Quantity * item.UnitPrice).ToString("C"))</td>
                                    @if ((User.IsInRole("Mechanic") || User.IsInRole("Admin")) && Model.Status != ServiceOrderStatus.Completed && Model.Status != ServiceOrderStatus.Cancelled)
                                    {
                                        <td>
                                            <form asp-action="RemoveItem" method="post" class="d-inline" onsubmit="return confirm('Remove this item?')">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@Model.Id" />
                                                <input type="hidden" name="itemId" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                                            </form>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-light">
                                <td colspan="4" class="text-end"><strong>Total:</strong></td>
                                <td><strong>@Model.Items.Sum(i => i.Quantity * i.UnitPrice).ToString("C")</strong></td>
                                @if ((User.IsInRole("Mechanic") || User.IsInRole("Admin")) && Model.Status != ServiceOrderStatus.Completed && Model.Status != ServiceOrderStatus.Cancelled)
                                {
                                    <td></td>
                                }
                            </tr>
                        </tfoot>
                    </table>
                }
                else
                {
                    <p class="text-muted">No items added yet.</p>
                }
            </div>
        </div>

        @if (User.IsInRole("Mechanic") || User.IsInRole("Admin"))
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Diagnostic Notes</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateDiagnostics" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="mb-3">
                            <label for="diagnosticNotes" class="form-label">Notes</label>
                            <textarea name="diagnosticNotes" id="diagnosticNotes" class="form-control" rows="4">@Model.DiagnosticNotes</textarea>
                        </div>
                        <div class="mb-3">
                            <label for="laborHours" class="form-label">Labor Hours</label>
                            <input type="number" name="laborHours" id="laborHours" class="form-control" style="max-width: 150px;" step="0.5" min="0" value="@Model.LaborHours" />
                        </div>
                        <button type="submit" class="btn btn-primary">Save Notes</button>
                    </form>
                </div>
            </div>
        }
        else if (!string.IsNullOrEmpty(Model.DiagnosticNotes))
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Diagnostic Notes</h5>
                </div>
                <div class="card-body">
                    <p>@Model.DiagnosticNotes</p>
                    @if (Model.LaborHours > 0)
                    {
                        <p><strong>Labor Hours:</strong> @Model.LaborHours</p>
                    }
                </div>
            </div>
        }

        @if (Model.Status == ServiceOrderStatus.Completed)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Review</h5>
                </div>
                <div class="card-body">
                    @if (Model.Review != null)
                    {
                        <div class="mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Model.Review.Rating)
                                {
                                    <span class="text-warning">&#9733;</span>
                                }
                                else
                                {
                                    <span class="text-muted">&#9733;</span>
                                }
                            }
                            <span class="ms-2">(@Model.Review.Rating/5)</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Review.Comment))
                        {
                            <p>@Model.Review.Comment</p>
                        }
                        <small class="text-muted">Reviewed on @Model.Review.CreatedAt.ToString("yyyy-MM-dd")</small>
                    }
                    else if (User.IsInRole("Client"))
                    {
                        <a asp-controller="Reviews" asp-action="Create" asp-route-orderId="@Model.Id" class="btn btn-outline-primary">Leave a Review</a>
                    }
                    else
                    {
                        <p class="text-muted">No review yet.</p>
                    }
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <a asp-action="Index" class="btn btn-secondary w-100">Back to Orders</a>
            </div>
        </div>
    </div>
</div>
