@model UpdateStatusViewModel
@{
    ViewData["Title"] = "Aktualizuj status zlecenia";
}

<h1>Aktualizuj status zlecenia</h1>
<p class="text-muted">Zlecenie #@Model.OrderId</p>
<hr />

<partial name="_ValidationSummary" />

<div class="row">
    <div class="col-md-6">
        <div class="mb-4">
            <label class="form-label">Aktualny status</label>
            <div>
                <partial name="_StatusBadge" model="Model.CurrentStatus" />
            </div>
        </div>

        @if (Model.CurrentStatus == ServiceOrderStatus.InProgress)
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Uwaga:</strong> Przed oznaczeniem zlecenia jako zakończone upewnij się, że dodano wszystkie usługi i części.
            </div>
        }

        @if (!Model.AvailableStatuses.Any())
        {
            <div class="alert alert-info">Brak dostępnych zmian statusu dla tego zlecenia.</div>
            <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Powrót do szczegółów
            </a>
        }
        else
        {
            <form asp-action="UpdateStatus" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="OrderId" />
                <input type="hidden" asp-for="CurrentStatus" />

                <div class="mb-3">
                <label asp-for="NewStatus" class="form-label">Nowy status</label>
                    <select asp-for="NewStatus" asp-items="Model.AvailableStatuses" class="form-select form-select-lg">
                    <option value="">-- Wybierz status --</option>
                    </select>
                    <span asp-validation-for="NewStatus" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg"></i> Aktualizuj status
                    </button>
                <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-outline-secondary">Anuluj</a>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
