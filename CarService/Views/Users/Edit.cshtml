@model (ApplicationUser User, IList<string> CurrentRoles)
@{
    ViewData["Title"] = "Zmień rolę użytkownika";
    var currentRole = Model.CurrentRoles.FirstOrDefault() ?? "Client";
}

<h1><i class="bi bi-person-gear"></i> Zmień rolę użytkownika</h1>
<p class="text-muted">@Model.User.Email</p>
<hr />

<partial name="_ValidationSummary" />

<div class="row">
    <div class="col-md-6">
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            <strong>Aktualna rola:</strong>
            @switch (currentRole)
            {
                case "Admin":
                    <span class="badge bg-danger ms-2">Administrator</span>
                    break;
                case "Mechanic":
                    <span class="badge bg-primary ms-2">Mechanik</span>
                    break;
                case "Client":
                    <span class="badge bg-success ms-2">Klient</span>
                    break;
                default:
                    <span class="badge bg-secondary ms-2">@currentRole</span>
                    break;
            }
        </div>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="userId" value="@Model.User.Id" />
            
            <div class="mb-3">
                <label for="newRole" class="form-label">Nowa rola</label>
                <select name="newRole" id="newRole" class="form-select">
                    <option value="Client" selected="@(currentRole == "Client")">Klient</option>
                    <option value="Mechanic" selected="@(currentRole == "Mechanic")">Mechanik</option>
                    <option value="Admin" selected="@(currentRole == "Admin")">Administrator</option>
                </select>
            </div>

            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>Uwaga:</strong> Zmiana roli użytkownika natychmiast wpływa na jego uprawnienia dostępu.
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg"></i> Zmień rolę
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>
