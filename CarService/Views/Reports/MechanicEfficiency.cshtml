@using CarService.Services.Interfaces
@model IEnumerable<MechanicEfficiencyDto>
@{
    ViewData["Title"] = "Mechanic Efficiency";
}

<h1><i class="bi bi-person-check"></i> Mechanic Efficiency</h1>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">No mechanic performance data available yet.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Mechanic Name</th>
                <th class="text-end">Completed Orders</th>
                <th class="text-end">Avg Completion (Hours)</th>
                <th>Performance</th>
            </tr>
        </thead>
        <tbody>
            @{
                var avgOverall = Model.Any() ? Model.Average(m => m.AvgCompletionHours) : 0;
            }
            @foreach (var mechanic in Model)
            {
                <tr>
                    <td>@mechanic.MechanicName</td>
                    <td class="text-end">@mechanic.CompletedOrders</td>
                    <td class="text-end">@mechanic.AvgCompletionHours.ToString("0.0") hrs</td>
                    <td>
                        @if (mechanic.AvgCompletionHours <= avgOverall * 0.8m)
                        {
                            <span class="badge bg-success">Excellent</span>
                        }
                        else if (mechanic.AvgCompletionHours <= avgOverall)
                        {
                            <span class="badge bg-primary">Good</span>
                        }
                        else if (mechanic.AvgCompletionHours <= avgOverall * 1.2m)
                        {
                            <span class="badge bg-warning text-dark">Average</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Below Average</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot class="table-light">
            <tr class="fw-bold">
                <td>Overall Average</td>
                <td class="text-end">@Model.Sum(m => m.CompletedOrders)</td>
                <td class="text-end">@avgOverall.ToString("0.0") hrs</td>
                <td></td>
            </tr>
        </tfoot>
    </table>

    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-info-circle"></i> Performance Legend</h5>
        </div>
        <div class="card-body">
            <ul class="list-unstyled mb-0">
                <li><span class="badge bg-success me-2">Excellent</span> 20% or more below average completion time</li>
                <li><span class="badge bg-primary me-2">Good</span> At or below average completion time</li>
                <li><span class="badge bg-warning text-dark me-2">Average</span> Up to 20% above average completion time</li>
                <li><span class="badge bg-danger me-2">Below Average</span> More than 20% above average completion time</li>
            </ul>
        </div>
    </div>
}

<div class="mt-4">
    <partial name="_BackButton" model='"Back to Dashboard"' />
</div>
