@using CarService.Services.Interfaces
@model IEnumerable<PopularServiceDto>
@{
    ViewData["Title"] = "Popular Services";
}

<h1><i class="bi bi-star"></i> Popular Services</h1>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">No service usage data available yet.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Rank</th>
                <th>Service Name</th>
                <th class="text-end">Usage Count</th>
                <th class="text-end">Total Revenue</th>
            </tr>
        </thead>
        <tbody>
            @{
                var rank = 1;
            }
            @foreach (var service in Model)
            {
                <tr>
                    <td>
                        @if (rank == 1)
                        {
                            <span class="badge bg-warning text-dark fs-6">#@rank</span>
                        }
                        else if (rank == 2)
                        {
                            <span class="badge bg-secondary fs-6">#@rank</span>
                        }
                        else if (rank == 3)
                        {
                            <span class="badge bg-danger fs-6">#@rank</span>
                        }
                        else
                        {
                            <span class="text-muted">#@rank</span>
                        }
                    </td>
                    <td>@service.ServiceName</td>
                    <td class="text-end">@service.UsageCount</td>
                    <td class="text-end">@service.TotalRevenue.ToString("C")</td>
                </tr>
                rank++;
            }
        </tbody>
        <tfoot class="table-light">
            <tr class="fw-bold">
                <td colspan="2">Total</td>
                <td class="text-end">@Model.Sum(s => s.UsageCount)</td>
                <td class="text-end">@Model.Sum(s => s.TotalRevenue).ToString("C")</td>
            </tr>
        </tfoot>
    </table>
}

<partial name="_BackButton" model='"Back to Dashboard"' />
