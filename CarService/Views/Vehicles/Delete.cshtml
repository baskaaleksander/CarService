@model Vehicle
@{
    ViewData["Title"] = "Delete Vehicle";
}

<h1>Delete Vehicle</h1>
<hr />

<div class="alert alert-danger">
    <h5 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>Are you sure you want to delete this vehicle?</h5>
    <p class="mb-0">This action cannot be undone.</p>
</div>

<div class="card mb-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Brand</dt>
            <dd class="col-sm-9">@Model.Brand</dd>
            <dt class="col-sm-3">Model</dt>
            <dd class="col-sm-9">@Model.Model</dd>
            <dt class="col-sm-3">Registration</dt>
            <dd class="col-sm-9"><strong>@Model.RegistrationNumber</strong></dd>
            <dt class="col-sm-3">VIN</dt>
            <dd class="col-sm-9"><code>@Model.VIN</code></dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete Vehicle
        </button>
        <partial name="_BackButton" model='"Back to Vehicles"' />
    </div>
</form>
