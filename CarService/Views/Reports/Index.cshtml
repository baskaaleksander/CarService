@using CarService.Services.Interfaces
@model DashboardStatsDto
@{
    ViewData["Title"] = "Dashboard";
}

<h1><i class="bi bi-speedometer2"></i> Dashboard</h1>
<hr />

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase">Total Orders</h6>
                        <h2 class="mb-0">@Model.TotalOrders</h2>
                    </div>
                    <div class="fs-1 opacity-50">
                        <i class="bi bi-clipboard-check"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase">Pending Orders</h6>
                        <h2 class="mb-0">@Model.PendingOrders</h2>
                    </div>
                    <div class="fs-1 opacity-50">
                        <i class="bi bi-hourglass-split"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-bg-info">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase">Active Mechanics</h6>
                        <h2 class="mb-0">@Model.ActiveMechanics</h2>
                    </div>
                    <div class="fs-1 opacity-50">
                        <i class="bi bi-wrench-adjustable"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title text-uppercase">Month Revenue</h6>
                        <h2 class="mb-0">@Model.MonthRevenue.ToString("C")</h2>
                    </div>
                    <div class="fs-1 opacity-50">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-lightning-charge"></i> Quick Actions</h5>
            </div>
            <div class="list-group list-group-flush">
                <a asp-controller="ServiceOrders" asp-action="Index" class="list-group-item list-group-item-action">
                    <i class="bi bi-clock me-2"></i> View Pending Orders
                </a>
                <a asp-controller="ServiceOrders" asp-action="Create" class="list-group-item list-group-item-action">
                    <i class="bi bi-plus-circle me-2"></i> Create New Order
                </a>
                <a asp-controller="Parts" asp-action="Index" class="list-group-item list-group-item-action">
                    <i class="bi bi-box me-2"></i> Check Inventory
                </a>
                <a asp-action="Revenue" class="list-group-item list-group-item-action">
                    <i class="bi bi-graph-up me-2"></i> View Reports
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <h5><i class="bi bi-file-earmark-bar-graph"></i> Detailed Reports</h5>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h6 class="card-title">Revenue Report</h6>
                        <p class="card-text"><small class="text-muted">View monthly revenue statistics and trends.</small></p>
                        <a asp-action="Revenue" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-graph-up"></i> View Report
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h6 class="card-title">Popular Services</h6>
                        <p class="card-text"><small class="text-muted">See the most requested services.</small></p>
                        <a asp-action="PopularServices" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-star"></i> View Report
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h6 class="card-title">Mechanic Efficiency</h6>
                        <p class="card-text"><small class="text-muted">Analyze mechanic performance.</small></p>
                        <a asp-action="MechanicEfficiency" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-person-check"></i> View Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
