@model AppointmentBookingViewModel
@{
    ViewData["Title"] = "Book Appointment";
}

<h1>Book an Appointment</h1>
<hr />

<partial name="_ValidationSummary" />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Book" method="post">
            <div class="mb-3">
                <label asp-for="VehicleId" class="form-label">Select Vehicle</label>
                <select asp-for="VehicleId" asp-items="Model.AvailableVehicles" class="form-select form-select-lg">
                    <option value="">-- Select a Vehicle --</option>
                </select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Select Services (optional)</label>
                <div class="border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                    @if (Model.AvailableServices.Any())
                    {
                        @foreach (var service in Model.AvailableServices)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="SelectedServiceIds" value="@service.Value" id="service_@service.Value">
                                <label class="form-check-label" for="service_@service.Value">
                                    @service.Text
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted mb-0">No services available.</p>
                    }
                </div>
                <div class="form-text">Select the services you need, or leave empty for a diagnostic check.</div>
            </div>

            <div class="mb-4">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe the issue or what service you need..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <div class="form-text">Please describe any issues or concerns with your vehicle.</div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-calendar-check"></i> Book Appointment
                </button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-x-lg"></i> Cancel
                </a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Need Help?</h5>
            </div>
            <div class="card-body">
                <p><strong>Step 1:</strong> Select the vehicle you want serviced.</p>
                <p><strong>Step 2:</strong> Choose the services you need (optional).</p>
                <p><strong>Step 3:</strong> Describe any issues or concerns.</p>
                <p><strong>Step 4:</strong> Click "Book Appointment" to submit.</p>
                <hr>
                <p class="mb-0 small text-muted">
                    <i class="bi bi-clock me-1"></i>Our team will review your appointment and assign a mechanic as soon as possible.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
