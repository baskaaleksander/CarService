@model IEnumerable<ServiceOrder>
@{
    ViewData["Title"] = "Service Orders";
    var statusFilter = Context.Request.Query["status"].ToString();
    var pendingCount = Model.Count(o => o.Status == ServiceOrderStatus.Pending);
    var inProgressCount = Model.Count(o => o.Status == ServiceOrderStatus.InProgress || o.Status == ServiceOrderStatus.Accepted);
    var completedCount = Model.Count(o => o.Status == ServiceOrderStatus.Completed);
    
    var filteredOrders = string.IsNullOrEmpty(statusFilter) ? Model : statusFilter switch
    {
        "pending" => Model.Where(o => o.Status == ServiceOrderStatus.Pending),
        "inprogress" => Model.Where(o => o.Status == ServiceOrderStatus.InProgress || o.Status == ServiceOrderStatus.Accepted),
        "completed" => Model.Where(o => o.Status == ServiceOrderStatus.Completed),
        _ => Model
    };
}

<h1><i class="bi bi-clipboard-check"></i> Service Orders</h1>
<hr />

@if (User.IsInRole("Admin"))
{
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link @(string.IsNullOrEmpty(statusFilter) ? "active" : "")" asp-action="Index">
                All <span class="badge bg-secondary">@Model.Count()</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(statusFilter == "pending" ? "active" : "")" asp-action="Index" asp-route-status="pending">
                Pending <span class="badge bg-warning text-dark">@pendingCount</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(statusFilter == "inprogress" ? "active" : "")" asp-action="Index" asp-route-status="inprogress">
                In Progress <span class="badge bg-info">@inProgressCount</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(statusFilter == "completed" ? "active" : "")" asp-action="Index" asp-route-status="completed">
                Completed <span class="badge bg-success">@completedCount</span>
            </a>
        </li>
    </ul>
}

@if (User.IsInRole("Client"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Create New Order
        </a>
    </p>
}

@if (!filteredOrders.Any())
{
    <div class="alert alert-info">No service orders found.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Order #</th>
                <th>Vehicle</th>
                @if (User.IsInRole("Admin"))
                {
                    <th>Client</th>
                    <th>Mechanic</th>
                }
                <th>Status</th>
                <th>Created</th>
                <th>Total Cost</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in filteredOrders)
            {
                <tr>
                    <td><strong>#@order.Id</strong></td>
                    <td>@order.Vehicle?.RegistrationNumber</td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>@order.Client?.Email</td>
                        <td>@(order.Mechanic?.Email ?? "<span class='text-muted'>Unassigned</span>")</td>
                    }
                    <td>
                        <partial name="_StatusBadge" model="order.Status" />
                    </td>
                    <td>@order.CreatedAt.ToString("d")</td>
                    <td>@order.Items.Sum(i => i.Quantity * i.UnitPrice).ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        @if (User.IsInRole("Admin") && order.MechanicId == null)
                        {
                            <a asp-action="Assign" asp-route-id="@order.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-person-plus"></i> Assign
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
