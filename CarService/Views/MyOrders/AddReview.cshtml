@model ReviewCreateViewModel
@{
    ViewData["Title"] = "Add Review";
}

<h1>Write a Review</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0">Order Information</h5>
            </div>
            <div class="card-body">
                <p><strong>Order:</strong> #@Model.ServiceOrderId</p>
                <p class="mb-0"><strong>Vehicle:</strong> @Model.VehicleInfo</p>
            </div>
        </div>

        <form asp-action="AddReview" asp-route-id="@Model.ServiceOrderId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Rating" class="form-label"></label>
                <div class="rating-input">
                    @for (int i = 5; i >= 1; i--)
                    {
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Rating" value="@i" id="rating_@i">
                            <label class="form-check-label" for="rating_@i">
                                @for (int j = 0; j < i; j++)
                                {
                                    <span class="text-warning">&#9733;</span>
                                }
                                @for (int j = i; j < 5; j++)
                                {
                                    <span class="text-muted">&#9734;</span>
                                }
                            </label>
                        </div>
                    }
                </div>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Comment" class="form-label"></label>
                <textarea asp-for="Comment" class="form-control" rows="5" placeholder="Share your experience with us..."></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
                <small class="text-muted">Optional - Tell us what you liked or how we can improve.</small>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Submit Review</button>
                <a asp-action="Details" asp-route-id="@Model.ServiceOrderId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
