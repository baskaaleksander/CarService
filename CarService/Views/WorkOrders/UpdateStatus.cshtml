@model UpdateStatusViewModel
@{
    ViewData["Title"] = "Update Order Status";
}

<h1>Update Order Status</h1>
<p class="text-muted">Order #@Model.OrderId</p>
<hr />

<partial name="_ValidationSummary" />

<div class="row">
    <div class="col-md-6">
        <div class="mb-4">
            <label class="form-label">Current Status</label>
            <div>
                <partial name="_StatusBadge" model="Model.CurrentStatus" />
            </div>
        </div>

        @if (Model.CurrentStatus == ServiceOrderStatus.InProgress)
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Note:</strong> Before marking this order as Completed, ensure all services and parts have been added.
            </div>
        }

        @if (!Model.AvailableStatuses.Any())
        {
            <div class="alert alert-info">No status transitions available for this order.</div>
            <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Details
            </a>
        }
        else
        {
            <form asp-action="UpdateStatus" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="OrderId" />
                <input type="hidden" asp-for="CurrentStatus" />

                <div class="mb-3">
                    <label asp-for="NewStatus" class="form-label">New Status</label>
                    <select asp-for="NewStatus" asp-items="Model.AvailableStatuses" class="form-select form-select-lg">
                        <option value="">-- Select Status --</option>
                    </select>
                    <span asp-validation-for="NewStatus" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> Update Status
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
